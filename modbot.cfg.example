# if using sqlite:
#   set system to sqlite
#   database to the path to the database file (relative or absolute)
#   host, username, and password will all be ignored

[database]
system = postgresql
host = localhost
database = database_name
username = database_username
password = database_password

[reddit]
user_agent = user_agent (your bot's username is fine, DO NOT FAKE)
username = reddit_username
password = reddit_password
report_backlog_limit_hours = 48

[loggers]
keys=root

[handlers]
keys=roothand

[formatters]
keys=rootform

[logger_root]
level=INFO
handlers=roothand

[handler_roothand]
class=StreamHandler
formatter=rootform
args=(sys.stdout,)

[formatter_rootform]
format=%(message)s
